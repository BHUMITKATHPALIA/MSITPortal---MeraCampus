<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#fff"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/ivAbout"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/main" />
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:weightSum="100">


            <ImageView
                android:id="@+id/ivAbout2"
                android:layout_width="fill_parent"
                android:layout_height="120dip"
                android:src="@drawable/college"
                android:layout_weight="30"
                />

            <TextView

                android:id="@+id/tvAbout"
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:layout_weight="30"
                android:text="@string/about_us"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:gravity="fill_horizontal|center_vertical|fill_vertical|center_horizontal" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                >
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="Maharaja Surajmal"
                    android:id="@+id/tvAbout3"
                    android:textSize="20dp"

                    android:layout_marginLeft="0dp"
                    android:layout_gravity="right"
                    android:gravity="center_vertical|right" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"

                    android:src="@drawable/maha" />
            </LinearLayout>
            <TextView
                android:id="@+id/tvAbout2"
                android:layout_width="fill_parent"
                android:layout_height="0dip"

                android:layout_marginBottom="40dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="50"
                android:text="@string/about_us_2"
                android:textSize="18dp"
                android:gravity="fill_horizontal|center_vertical|fill_vertical|center_horizontal" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>
