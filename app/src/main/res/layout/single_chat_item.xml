<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="5dp"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/abc">

    <ImageView
        android:layout_width="153dp"
        android:layout_height="162dp"
        android:id="@+id/ivProfPic"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_margin="5dp"
        android:textColor="#f905010c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/tvMessage"
        android:layout_alignBottom="@+id/ivProfPic"
        android:layout_toRightOf="@+id/ivProfPic"
        android:layout_toEndOf="@+id/ivProfPic" />

    <TextView

        android:textColor="#f905010c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/tvPersonName"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivProfPic"
        android:layout_toEndOf="@+id/ivProfPic"
        android:layout_margin="10dp" />

    <TextView
        android:layout_margin="5dp"
        android:textColor="#f905010c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/tvDate"
        android:layout_alignBottom="@+id/tvPersonName"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>