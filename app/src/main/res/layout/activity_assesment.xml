<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:weightSum="5"
    android:orientation="vertical"
    android:id="@+id/lin"
    android:background="@drawable/abc">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Self Assessment"
        android:id="@+id/tvAss"
        android:textSize="30dp"
        android:layout_weight=".5
"       android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Assess yourself"
        android:id="@+id/tv1Ass"
        android:layout_gravity="center_horizontal"
        android:layout_weight=".5"
        android:textSize="40dp"
        android:textColor="#000000" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinAss"
        android:layout_gravity="center_horizontal"
        android:layout_weight=".5"
        android:entries="@array/assess_arrays"
        android:prompt="@string/assess_prompt"
        android:spinnerMode="dropdown" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go"
        android:id="@+id/bGo"
        android:layout_gravity="right"
        android:layout_weight=".5"
        android:background="@drawable/shade_button_circle"
        android:layout_marginRight="9dp"
        android:layout_marginTop="7dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvResults"
        android:layout_gravity="center_horizontal"
        android:layout_weight=".5"
        android:textSize="35dp"/>

</LinearLayout>
